{
  "name": "campus-compass",
  "version": "1.0.0",
  "description": "A reward-based mental health support platform for university students.",
  "private": true,
  "scripts": {
    "dev:compass": "cd apps/campus-compass && npm run dev",
    "dev:manager": "cd apps/campus-manager && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "workspaces": [
    "campus-compass",
    "campus-manager"
  ],
  "dependencies": {
    "pg": "^8.11.3",
    "drizzle-orm": "^0.20.0"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
